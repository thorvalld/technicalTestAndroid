<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    tools:context=".fragments.Dashboard">

    <LinearLayout
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <!-- header bar -->
        <LinearLayout
            android:weightSum="3"
            android:layout_marginBottom="28dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                app:tint="@color/white" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/child_first_name"/>
            <ImageView
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- scrolling container-->
        <ScrollView
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- sub container -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <!-- profile info -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/user_placeholder"
                    android:layout_marginBottom="12dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/child_full_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_on_primary_disabled"
                    android:text="@string/age"/>
            </LinearLayout>
            <!-- tabs -->
            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:paddingHorizontal="46dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbDay"
                        android:checked="false"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:textColor="@color/white"
                        android:text="@string/seg_day"
                        android:gravity="center"
                        android:background="@drawable/seg_selector"
                        android:button="@android:color/transparent"
                        android:layout_weight="1"
                        android:onClick="onSegmentControlled"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbWeek"
                        android:checked="false"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:background="@drawable/seg_selector"
                        android:textColor="@color/white"
                        android:text="@string/seg_week"
                        android:gravity="center"
                        android:button="@android:color/transparent"
                        android:layout_weight="1"
                        android:onClick="onSegmentControlled"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbMonth"
                        android:checked="true"
                        android:background="@drawable/seg_selector"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:textColor="@color/primaryColor"
                        android:text="@string/seg_month"
                        android:gravity="center"
                        android:button="@android:color/transparent"
                        android:layout_weight="1"
                        android:onClick="onSegmentControlled"/>
                </RadioGroup>
            </LinearLayout>

            <!-- 2x2 dashboard grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginBottom="16dp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="4dp"
                    android:layout_width="0dp"
                    android:layout_height="128dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@color/primaryTextColor"
                            android:gravity="center"
                            android:layout_marginBottom="16dp"
                            android:text="@string/dash_card_title_a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/dangerColor"
                            android:gravity="center"
                            android:text="@string/danger_level"
                            android:textSize="24sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="4dp"
                    android:layout_width="0dp"
                    android:layout_height="128dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@color/primaryTextColor"
                            android:gravity="center"
                            android:layout_marginBottom="16dp"
                            android:text="@string/dash_card_title_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/primaryTextColor"
                            android:gravity="center"
                            android:text="@string/sleep_duration"
                            android:textSize="24sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="4dp"
                    android:layout_width="0dp"
                    android:layout_height="128dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@color/primaryTextColor"
                            android:gravity="center"
                            android:layout_marginBottom="16dp"
                            android:text="@string/dash_card_title_c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/primaryTextColor"
                            android:gravity="center"
                            android:text="@string/device_usage"
                            android:textSize="24sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="4dp"
                    android:layout_width="0dp"
                    android:layout_height="128dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@color/primaryTextColor"
                            android:gravity="center"
                            android:layout_marginBottom="16dp"
                            android:text="@string/dash_card_title_d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/primaryTextColor"
                            android:gravity="center"
                            android:text="@string/phone_call_duration"
                            android:textSize="24sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
            <!-- alert card -->
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/primaryTextColor"
                                android:gravity="start"
                                android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:text="@string/alerts_card_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_marginStart="6dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="1"
                                        android:textColor="@color/dangerColor"
                                        android:gravity="start"
                                        android:text="@string/toxic_comment"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:textColor="@color/gray"
                                        android:text="@string/toxic_comment_timestamp"
                                        android:textSize="9sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginStart="6dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/gray"
                                        android:gravity="start"
                                        android:textStyle="normal"
                                        android:text="@string/toxic_comment_desc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginStart="4dp"
                                android:background="@color/bottomNavUnselectedItems"
                                android:layout_width="2dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_marginStart="6dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="1"
                                        android:textColor="@color/dangerColor"
                                        android:gravity="start"
                                        android:text="@string/sleep_deprivation"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sleep_deprivation_timestamp"
                                        android:textColor="@color/gray"
                                        android:textSize="9sp"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginStart="6dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/gray"
                                        android:gravity="start"
                                        android:textStyle="normal"
                                        android:text="@string/sleep_deprivation_desc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginStart="4dp"
                                android:background="@color/bottomNavUnselectedItems"
                                android:layout_width="2dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                 <!-- mental state card -->
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:layout_marginHorizontal="4dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginBottom="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/primaryTextColor"
                            android:gravity="start"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:text="@string/mental_state_card_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/mental_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
             </androidx.cardview.widget.CardView>
                <!-- social activity card -->
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/primaryTextColor"
                                android:gravity="start"
                                android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:text="@string/social_card_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/user_placeholder"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_marginStart="6dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="1"
                                        android:textColor="@color/primaryTextColor"
                                        android:gravity="start"
                                        android:text="@string/user_a"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:textColor="@color/gray"
                                        android:text="@string/toxic_comment_timestamp"
                                        android:textSize="9sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginStart="6dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/gray"
                                        android:gravity="start"
                                        android:textStyle="normal"
                                        android:text="@string/toxic_comment_desc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginStart="4dp"
                                android:background="@color/bottomNavUnselectedItems"
                                android:layout_width="2dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/user_placeholder"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_marginStart="6dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_weight="1"
                                        android:textColor="@color/primaryTextColor"
                                        android:gravity="start"
                                        android:text="@string/user_b"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:textColor="@color/gray"
                                        android:text="@string/sleep_deprivation_timestamp"
                                        android:textSize="9sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="SmallSp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginStart="6dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/gray"
                                        android:gravity="start"
                                        android:textStyle="normal"
                                        android:text="@string/sleep_deprivation_desc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginStart="4dp"
                                android:background="@color/bottomNavUnselectedItems"
                                android:layout_width="2dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- sleep duration card -->
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">
                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_marginBottom="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/primaryTextColor"
                                android:gravity="start"
                                android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:text="@string/mental_state_card_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/sleep_chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>